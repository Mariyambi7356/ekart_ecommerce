  <!--================ confirmation part start =================-->
  <section class="confirmation_part padding_top">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="confirmation_tittle">
            <span>Thank you. Your order has been confirmed.</span>
          </div>
        </div>
        <div class="col-lg-6 col-lx-4">
          <div class="single_confirmation_details">
            <h4>order info</h4>
            <ul>

              <li>
                <p>order number</p><span>
                  <%=orders._id.toString() %>
                </span>
              </li>
              <li>
                <p>date</p><span>: <%=orders.start_date.toDateString()%></span>
              </li>
              <li>
                <p>total</p><span>: $ <%=orders.totalPrice%></span>
              </li>
              <li>
                <p>payment method</p><span>: <%=orders.paymentType %></span>
              </li>
              
             
              
                <li>
                <p>Delivery Status</p>
                <span>


                  <% if (orders.is_delivered===false && orders.is_returned===0) { %>
                    Shipped
                    <% } else if (orders.is_delivered===true && orders.is_returned===0) { %>
                      Delivered
                      <% } else if (orders.is_returned===1) { %>
                        Returned
                        <% } else { %>
                          Cancelled
                          <% } %>


                </span>
              </li>

            </ul>
          </div>
        </div>
        <div class="col-lg-6 col-lx-4">
          <div class="single_confirmation_details">
            <h4>Billing Address</h4>
            <ul>
              <li>
                <p>Street</p><span>: <%=orders.address[0].address%></span>
              </li>
              <li>
                <p>city</p><span>: <%=orders.address[0].city%></span>
              </li>
              <li>
                <p>District</p><span>: <%=orders.address[0].district%></span>
              </li>
              <li>
                <p>postcode</p><span>: <%=orders.address[0].zip%></span>
              </li>
            </ul>
          </div>
        </div>
        <div class="col-lg-6 col-lx-4">
          <div class="single_confirmation_details">
            <h4>shipping Address</h4>
            <ul>
              <li>
                <p>Street</p><span>: <%=orders.address[0].address%></span>
              </li>
              <li>
                <p>city</p><span>: <%=orders.address[0].city%></span>
              </li>
              <li>
                <p>District</p><span>: <%=orders.address[0].district%></span>
              </li>
              <li>
                <p>postcode</p><span>: <%=orders.address[0].zip%></span>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <div class="order_details_iner">
            <h3>Order Details</h3>
            <table class="table table-borderless">

              <thead>
                <tr>
                  <th scope="col" colspan="2">Product</th>
                  <!-- <th scope="col" colspan="2"></th> -->
                  <th scope="col">Quantity</th>
                  <th scope="col">Total</th>
                </tr>
              </thead>
              <tbody>
                <%orders.item.forEach(item=> {%>
                  <tr>
                    <th colspan="2"><span>
                        <%=item.product.productName%>
                      </span></th>
                    <!-- <th colspan="2"><span><img style="height: 7rem;width: 10rem;" src="/productImages/<%=item.product.productImages[0]%>" alt="" class="img-fluid" > </span></th> -->
                    <th> <span>x <%=item.quantity%></span></th>
                    <th> <span>$ <%=item.price*item.quantity%></span></th>
                  </tr>
                  <%})%>
                   
                    <tr>
                      <th colspan="3">shipping</th>
                      <th><span>$ 40</span></th>

                    </tr>
                    <tr>
                      <th colspan="3">Subtotal</th>
                      <th> <span>$ <%=parseInt(orders.totalPrice) %></span></th>
                    </tr>
              </tbody>
              <tfoot>
                <tr>
                  <th scope="col" colspan="3">Total</th>
                  <th scope="col">$ <%=parseInt(orders.totalPrice) %>
                  </th>
                </tr>
              </tfoot>
            </table>
          </div>
        </div>
      </div>
    </div>
