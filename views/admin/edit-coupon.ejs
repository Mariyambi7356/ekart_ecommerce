                <div class="col-md-6">
                  <div class="form-floating">
                    <input type="text" class="form-control" id="floatingName" name="couponName"
                      value="<%= coupon.couponName %>" placeholder="Coupon Name" required />
                    <label for="productName">Coupon Name</label>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-floating">
                    <input type="text" name="couponCode" class="form-control" id="floatingPassword"
                      value="<%= coupon.couponCode %>" placeholder="Password" />
                    <label for="price">Enter Code</label>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="col-md-12">
                    <div class="form-floating">
                      <input id="floatingPassword" type="date" name="startDate" class="form-control" id="floatingCity"
                        placeholder="Start Date" />
                      <label for="Quantity">Start Date</label>
                    </div>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-floating mb-3">
                    <input id="floatingPassword" type="date" name="endDate" id="form3Example3c" class="form-control"
                      required />
                    <label class="form-label" for="form3Example3c">End Date</label>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-floating mb-3">
                    <input type="text" name="minAmount" id="floatingPassword" id="form3Example1c" class="form-control"
                      required placeholder="Minimum Amount" value="<%= coupon.minAmount %>" />
                    <label class="form-label" for="form3Example1c">Minimum Amount</label>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-floating">
                    <input type="text" class="form-control" id="floatingName" name="quantity" placeholder="Quantity"
                      value="<%= coupon.quantity %>" required />
                    <label for="productName">Quantity</label>
                  </div>
                </div>

                <div class="col-md-12">
                  <div class="form-floating mb-3">
                    <input type="text" name="maxDiscount" id="form3Example4c" class="form-control" id="floatingPassword"
                      placeholder="Max Discount" value="<%= coupon.maxDiscount %>" required />
                    <label class="form-label" for="form3Example4c">Max Discount</label>
                  </div>
                </div>
                <div class="text-center">
                  <button type="submit" class="btn btn-primary">
                    Submit
                  </button>
                  <button type="cancel" class="btn btn-secondary">
                    Cancel
                  </button>
                </div>
                <% if(typeof message !=='undefined' ){ %>

                  <p style="
                      font-size: small;
                      color: red;
                      font-family: 'Tilt Warp', cursive;
