  <!-- Template Main JS File -->
  <script src="assets/js/main.js"></script>
  <script>
    const form = document.querySelector('form');
    const couponName = document.querySelector('input[name="couponName"]');
    const couponCode = document.querySelector('input[name="couponCode"]');
    const startDate = document.querySelector('input[name="startDate"]');
    const endDate = document.querySelector('input[name="endDate"]');
    const minAmount = document.querySelector('input[name="minAmount"]');
    const quantity = document.querySelector('input[name="quantity"]');
    const maxDiscount = document.querySelector('input[name="maxDiscount"]');

    form.addEventListener('submit', (event) => {
      event.preventDefault();

      const now = new Date();
      const start = new Date(startDate.value);
      const end = new Date(endDate.value);

      if (!couponName.value || !couponCode.value || !startDate.value || !endDate.value || !minAmount.value || !quantity.value || !maxDiscount.value) {
        return alert('Please fill in all fields.');
      }

      if (isNaN(minAmount.value) || isNaN(quantity.value) || isNaN(maxDiscount.value)) {
        return alert('Minimum amount, quantity, and max discount must be numbers.');
      }

      if (start <= now) {
        return alert('Start date must be greater than current date/time.');
      }

      if (end <= start) {
        return alert('End date must be after start date.');
      }

      // Submit the form if all validations pass
      form.submit();
    });

  </script>
