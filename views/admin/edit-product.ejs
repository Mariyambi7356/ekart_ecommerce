  <script>
    function checkImageFileType() {
      const fileInput = document.getElementById("image");
      const filePath = fileInput.value;
      const allowedExtensions = /(\.jpg|\.jpeg|\.png|\.gif)$/i;

      if (!allowedExtensions.exec(filePath)) {
        alert(
          "Invalid file type. Only JPG, JPEG, PNG, and GIF files are allowed."
        );
        fileInput.value = "";
        return false;
      }
    }
  </script>

  <script>

    const form = document.querySelector('form');
    const productNameInput = document.getElementById('floatingName');
    const priceInput = document.getElementById('floatingPassword');
    const quantityInput = document.getElementById('floatingCity');
    const categorySelect = document.getElementById('category');
    const brandSelect = document.getElementById('brand');
    const fileInput = document.getElementById('image');
    const descriptionInput = document.getElementById('floatingTextarea');


    form.addEventListener('submit', (event) => {

      event.preventDefault();


      if (productNameInput.value.trim() === '') {
        alert('Please enter a product name.');
        productNameInput.focus();
        return;
      }


      if (priceInput.value.trim() === '' || isNaN(priceInput.value.trim())) {
        alert('Please enter a valid price.');
        priceInput.focus();
        return;
      }


      if (quantityInput.value.trim() === '' || isNaN(quantityInput.value.trim())) {
        alert('Please enter a valid quantity.');
        quantityInput.focus();
        return;
      }


      if (categorySelect.value === '') {
        alert('Please select a category.');
        categorySelect.focus();
        return;
      }


      if (brandSelect.value === '') {
        alert('Please select a brand.');
        brandSelect.focus();
        return;
      }




      if (descriptionInput.value.trim() === '') {
        alert('Please enter a description.');
        descriptionInput.focus();
        return;
      }

      form.submit();
    });

  </script>
  <script>
    function deleteImage(index, productId) {
      fetch(`/admin/deletImage?index=${index}&productId=${productId}`, {
        method: 'DELETE'
      })
        .then(response => {
          if (response.ok) {
            // Reload the page to show the updated product images
            window.location.reload();
          }
        })
        .catch(error => console.log(error));
    }

  </script>
