    <section class="section">
      <div class="row">


        <div class="col-lg-12">




          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Products</h5>

              <!-- Floating Labels Form -->
              <form class="row g-3" action="/admin/edit-product?id=<%=product._id %>" method="post"
                enctype="multipart/form-data">
                <div class="row mt-2">
                  <% for (let i=0; i < product.productImages.length ; i++) { %>
                    <div class="col-lg-4">
                      <div class="card">
                        <div class="card-body profile-card pt-4">
                          <img src="<%=product.productImages[i]%>" alt="Profile"
                            style="max-width: 163px; margin-bottom: 5px;">
                        </div>
                        <button class="btn btn-danger" style="width: 6em;"> <a
                            href="/admin/deletImage?index=<%=i%>&productId=<%=product.id%>"
                            style="color: white;">delete</a> </button>
                      </div>
                    </div>
                    <% } %>
                </div>
                <div class="col-md-6">
                  <div class="form-floating">
                    <input type="text" class="form-control" id="floatingName" name="productName"
                      placeholder="Product Name" value="<%= product.productName %>" >
                    <label for="productName">Product Name</label>
                  </div>
                </div>

                <div class="col-md-6">
                  <div class="form-floating">
                    <input type="text" value="<%= product.price%>" name="price" class="form-control"
                      id="floatingPassword" placeholder="Password">
                    <label for="price">Price</label>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="col-md-12">
                    <div class="form-floating">
                      <input value="<%= product.quantity%>" type="text" class="form-control" id="floatingCity"
                        placeholder="Quantity" name="quantity">
                      <label for="Quantity">Quantity</label>
                    </div>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-floating mb-3">
                    <select id="category" name="category" class="form-control" >
                      <option value="<%= product.category.name%>" selected >
                        <%= product.category.name%>
                      </option>
                      <% for (let i=0; i < category.length; i++) { %>
                        <option value="<%= category[i].name %>">
                          <%= category[i].name %>
                        </option>
                        <% } %>
                    </select>

                  </div>
                </div>
                <div class="col-md-6 ">
                  <div class="form-floating mb-3">
                    <select id="brand" name="brand" class="form-control" >
                      <option value="<%= product.brand.brandName %>" selected>
                        <%= product.brand.brandName%>
                      </option>
                      <% for (let i=0; i < brand.length; i++) { %>
                        <option value="<%= brand[i].brandName %>">
                          <%= brand[i].brandName %>
                        </option>
                        <% } %>
                    </select>
                  </div>
                </div>
