        </a>
      </li>


    </ul>
    </ul>


  </aside>
  <!-- End Sidebar-->

  <main id="main" class="main">
    <div class="pagetitle">
      <h1>Product Tables</h1>
      <nav>
        <ol class="breadcrumb">

          <li class="breadcrumb-item">Product</li>
          <li class="breadcrumb-item active">Data</li>
        </ol>
      </nav>
    </div>
    <!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-lg-12">
          <div class="card">
            <div class="card-body">
              <!-- Table with stripped rows -->
              <table class="table datatable">
                <thead>
                  <tr style="font-family: 'EB Garamond', serif">
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Image</th>
                    <th scope="col">Status</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% if(product.length>0){ %>
                    <% for(let i=0; i<product.length; i++){ %>
                      <tr>

                        <td>
                          <%= product[i].productName %>
                        </td>
                        <td>
                          <%= product[i].price %>
                        </td>
                        <td><img style="width:60px;height:60px;" class="img-fluid"
                            src="<%=product[i].productImages[0] %>"></td>
                        <td>
                          <% if (product[i].status==0) { %> Active <% } else if (product[i].status==1) { %> Inactive <%
                                } %>
                        </td>
                        <td style="font-family: 'EB Garamond', serif;">
                          <a href="/admin/product-details?id=<%=product[i]._id %>" style="font-size: small;"
                            class="btn btn-primary mt-1">View</a>
                          <a href="/admin/edit-product?id=<%=product[i]._id%>" style="font-size: small;"
                            class="btn btn-success mt-1">Edit</a>
                          <% if(product[i].status==0){ %>
                            <a href="/admin/blockProduct?id=<%=product[i]._id%>"><button type="button"
                                style="font-size: small;" class="btn btn-danger mt-1">Unlist</button></a>
                            <% } else { %>
                              <a href="/admin/unBlockProduct?id=<%=product[i]._id%>"><button type="button"
                                  style="font-size: small;" class="btn btn-success mt-1">List</button></a>
                              <% } %>
                        </td>
                      </tr>
                      <% } %>
                        <% } else { %>
                          <tr>
                            <td colspan="5">Product Not Found</td>
                          </tr>
                          <% } %>
                </tbody>
              </table>
              <!-- End Table with stripped rows -->
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <!-- End #main -->

  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i
      class="bi bi-arrow-up-short"></i></a>

